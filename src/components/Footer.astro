---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer id="footer-section" class="bg-brand-light py-20 px-6 border-t border-brand/10">
  <div class="max-w-4xl mx-auto text-center">
    
    <div class="opacity-0 translate-y-8 transition-all duration-[1200ms] ease-out anim-footer">
      <p class="font-script text-brand-dark text-4xl md:text-5xl mb-8">
        ¡Te espero para celebrar juntos!
      </p>
      
      <div class="flex justify-center items-center gap-4 text-accent mb-12">
        <span class="h-[1px] w-12 bg-brand/30"></span>
        <span class="text-2xl">❤</span>
        <span class="h-[1px] w-12 bg-brand/30"></span>
      </div>
    </div>

    <div class="space-y-4 opacity-0 transition-all duration-[1000ms] delay-500 anim-footer">
      <p class="font-sans text-brand-dark/70 text-[10px] uppercase tracking-[0.4em]">
        Valery &bull; Mis Quince Años &bull; {currentYear}
      </p>
      
      <p class="font-serif text-brand-dark/50 text-xs italic">
        Hecho con amor para un día inolvidable
      </p>
    </div>

    <button 
      onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
      class="mt-12 text-brand-dark/20 hover:text-accent transition-colors duration-300"
      title="Volver al inicio"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="m18 15-6-6-6 6"/></svg>
    </button>
  </div>
</footer>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const elements = entry.target.querySelectorAll('.anim-footer');
        elements.forEach(el => {
          el.classList.remove('opacity-0', 'translate-y-8');
          el.classList.add('opacity-100', 'translate-y-0');
        });
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  const footer = document.getElementById('footer-section');
  if (footer) observer.observe(footer);
</script>